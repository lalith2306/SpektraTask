{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "DeploymentID": { "type": "string" },
    "virtualMachine1Size":{"type": "string"},
    "virtualMachine2Size":{"type": "string"},
    "virtualMachine3Size":{"type": "string"},
    "vm1Name":{"type": "string"},
    "vm2Name":{"type": "string"},
    "vm3Name":{"type": "string"},
    "vm1ImageId":{"type": "string"},
    "vm2ImageId":{"type": "string"},
    "vm3ImageId":{"type": "string"},
    "vm1PrivateIP":{"type": "string"},
    "vm2PrivateIP":{"type": "string"},
    "vm3PrivateIP":{"type": "string"},
    "trainerUserName":{"type": "string"},
    "trainerUserPassword":{"type": "string"}
  },
  "variables": {
    "Enable-CloudLabsEmbeddedShadow": "[concat(' -trainerUserName ', parameters('trainerUserName'), ' -trainerUserPassword ', parameters('trainerUserPassword'))]",
    "region": "[resourceGroup().location]",
    "vnetName": "[concat('vnet-', parameters('DeploymentID'))]",
    "subnetName": "subnet",
    "addressPrefix": "10.0.0.0/16",
    "subnetPrefix": "10.0.0.0/24",
    "dnsServers": [ "10.0.0.8", "8.8.8.8" ],
    "vm1NIC":"[concat('nic-', parameters('vm1Name'))]",
    "vm2NIC": "[concat('nic-', parameters('vm2Name'))]",
    "vm3NIC": "[concat('nic-', parameters('vm3Name'))]",
    "nsgName": "[concat('nsg-', parameters('DeploymentID'))]",
    "publicIpAddressNamevm1": "[concat(parameters('vm1Name'), '-pip')]",
    "publicIpAddressDNSNamevm1": "[toLower(concat(parameters('vm1Name'), parameters('DeploymentID'), uniqueString(resourceGroup().id)))]",
    "publicIpAddressNamevm2": "[concat(parameters('vm2Name'), '-pip')]",
    "publicIpAddressDNSNamevm2": "[toLower(concat(parameters('vm2Name'), parameters('DeploymentID'), uniqueString(resourceGroup().id)))]",
    "publicIpAddressNamevm3": "[concat(parameters('vm3Name'), '-pip')]",
    "publicIpAddressDNSNamevm3": "[toLower(concat(parameters('vm3Name'), parameters('DeploymentID'), uniqueString(resourceGroup().id)))]"
  },
  "resources": [
 
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2022-11-01",
      "name": "[variables('vnetName')]",
      "location": "[variables('region')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [ "[variables('addressPrefix')]" ]
        },
        "dhcpOptions": {
          "dnsServers": "[variables('dnsServers')]"
        },
        "subnets": [
          {
            "name": "[variables('subnetName')]",
            "properties": {
              "addressPrefix": "[variables('subnetPrefix')]"
            }
          }
        ]
      }
    },
 
 
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2022-11-01",
      "name": "[variables('nsgName')]",
      "location": "[variables('region')]",
      "properties": {
        "securityRules": [
          {
            "name": "default-allow-rdp",
            "properties": {
              "priority": 1000,
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "3389",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "direction": "Inbound"
            }
          },
          {
            "name": "allow-8888",
            "properties": {
              "priority": 1100,
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "8888",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "direction": "Inbound"
            }
          },
          {
            "name": "allow-8787",
            "properties": {
              "priority": 1200,
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "8787",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "direction": "Inbound"
            }
          },
          {
            "name": "allow-80",
            "properties": {
              "priority": 1400,
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "80",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "direction": "Inbound"
            }
          },
          {
            "name": "allow-SSH",
            "properties": {
              "priority": 1500,
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "22",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "direction": "Inbound"
            }
          }
        ]
      }
    },
 
 
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2022-11-01",
      "name": "[variables('vm1NIC')]",
      "location": "[variables('region')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]",
        "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "[concat('ipconfig-', parameters('vm1Name'))]",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('vm1PrivateIP')]",
              "publicIpAddress": {
                "id": "[resourceId('Microsoft.Network/publicIpAddresses', variables('publicIpAddressNamevm1'))]"
              },
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('subnetName'))]"
              }
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
        }
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2022-11-01",
      "name": "[variables('vm2NIC')]",
      "location": "[variables('region')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]",
        "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "[concat('ipconfig-', parameters('vm2Name'))]",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('vm2PrivateIP')]",
              "publicIpAddress": {
                "id": "[resourceId('Microsoft.Network/publicIpAddresses', variables('publicIpAddressNamevm2'))]"
              },
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('subnetName'))]"
              }
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
        }
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2022-11-01",
      "name": "[variables('vm3NIC')]",
      "location": "[variables('region')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]",
        "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "[concat('ipconfig-', parameters('vm3Name'))]",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('vm3PrivateIP')]",
              "publicIpAddress": {
                "id": "[resourceId('Microsoft.Network/publicIpAddresses', variables('publicIpAddressNamevm3'))]"
              },
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('subnetName'))]"
              }
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2024-07-01",
      "name": "[parameters('vm1Name')]",
      "location": "[variables('region')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces', variables('vm1NIC'))]"
      ],
      "properties": {
        "hardwareProfile": { "vmSize": "[parameters('virtualMachine1Size')]" },
        "storageProfile": {
          "imageReference": {
            "id": "[parameters('vm1ImageId')]"
          },
          "osDisk": {
            "name": "[concat(parameters('vm1Name'), '-osdisk')]",
            "createOption": "FromImage",
            "diskSizeGB": 256,
            "managedDisk": { "storageAccountType": "StandardSSD_LRS" }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            { "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('vm1NIC'))]" }
          ]
        }
      }
    },
    {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2015-06-15",
            "name": "[concat(parameters('vm1Name'),'/', 'winExtension')]",
            "location": "[variables('region')]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', parameters('vm1Name'))]"
            ],
            "tags": {
                "displayName": "VM1 Extension"
            },
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.8",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                      "https://raw.githubusercontent.com/lalith2306/SpektraTask/refs/heads/main/VM/dc.ps1",
                      "https://experienceazure.blob.core.windows.net/vmaas/s/arm-templates/scripts/psscript.ps1",
                      "https://experienceazure.blob.core.windows.net/templates/cloudlabs-common/cloudlabs-windows-functions.ps1"
                    ]
                },
                "protectedSettings": {
                    "commandToExecute": "[concat('powershell.exe -ExecutionPolicy Unrestricted -File dc.ps1 ', variables('Enable-CloudLabsEmbeddedShadow'), ' ', parameters('vmCustomImageOsState'), ' ', parameters('vmAdminUserName'), ' ', variables('vmPasswordAdmin'), ' ', parameters('provisionNonAdminUser'), ' ', parameters('vmNonAdminUserName'), ' ', variables('vmPasswordNonAdmin'), ' ', parameters('vmImageType'))]"
                }
        }
    },
    {
      "name": "[variables('publicIpAddressNamevm1')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2022-09-01",
      "comments": "Public IP",
      "location": "[variables('region')]",
      "tags": {
        "displayName": "Public IP"
      },
      "sku": {
        "name": "Standard"
      },
      "properties": {
        "publicIPAllocationMethod": "Static",
        "dnsSettings": {
          "domainNameLabel": "[variables('publicIpAddressDNSNamevm1')]"
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2024-07-01",
      "name": "[parameters('vm2Name')]",
      "location": "[variables('region')]",
      "dependsOn": [ "[resourceId('Microsoft.Network/networkInterfaces', variables('vm2NIC'))]" ],
      "properties": {
        "hardwareProfile": { "vmSize": "[parameters('virtualMachine2Size')]"},
        "storageProfile": {
          "imageReference": {
            "id": "[parameters('vm2ImageId')]"
          },
          "osDisk": {
            "createOption": "FromImage",
            "diskSizeGB": 256,
            "managedDisk": {
              "storageAccountType": "StandardSSD_LRS"
            }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            { "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('vm2NIC'))]" }
          ]
        }
      }
    },
    {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2015-06-15",
            "name": "[concat(parameters('vm2Name'),'/', 'winExtension')]",
            "location": "[variables('region')]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', parameters('vm2Name'))]"
            ],
            "tags": {
                "displayName": "VM2 Extension"
            },
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.8",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                         "https://experienceazure.blob.core.windows.net/vmaas/s/arm-templates/RecastMultiVM/Scripts/rms.ps1"
                    ]
                },
                "protectedSettings": {
                    "commandToExecute": "powershell -ExecutionPolicy Unrestricted -File rms.ps1"
                }
        }
    },
    {
      "name": "[variables('publicIpAddressNamevm2')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2022-09-01",
      "comments": "Public IP",
      "location": "[variables('region')]",
      "tags": {
        "displayName": "Public IP"
      },
      "sku": {
        "name": "Standard"
      },
      "properties": {
        "publicIPAllocationMethod": "Static",
        "dnsSettings": {
          "domainNameLabel": "[variables('publicIpAddressDNSNamevm2')]"
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2024-07-01",
      "name": "[parameters('vm3Name')]",
      "location": "[variables('region')]",
      "dependsOn": [ "[resourceId('Microsoft.Network/networkInterfaces', variables('vm3NIC'))]" ],
      "properties": {
        "hardwareProfile": { "vmSize": "[parameters('virtualMachine3Size')]" },
        "storageProfile": {
          "imageReference": {
            "id": "[parameters('vm3ImageId')]"
          },
          "osDisk": {
            "createOption": "FromImage",
            "diskSizeGB": 256,
            "managedDisk": {
              "storageAccountType": "StandardSSD_LRS"
            }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            { "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('vm3NIC'))]" }
          ]
        }
      }
    },
    {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2015-06-15",
            "name": "[concat(parameters('vm3Name'),'/', 'winExtension')]",
            "location": "[variables('region')]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', parameters('vm3Name'))]"
            ],
            "tags": {
                "displayName": "VM3 Extension"
            },
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.8",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                      "https://experienceazure.blob.core.windows.net/vmaas/s/arm-templates/RecastMultiVM/Scripts/windows.ps1"
                    ]
                },
                "protectedSettings": {
                    "commandToExecute": "powershell -ExecutionPolicy Unrestricted -File windows.ps1"
                }
        }
    },
    {
      "name": "[variables('publicIpAddressNamevm3')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2022-09-01",
      "comments": "Public IP",
      "location": "[variables('region')]",
      "tags": {
        "displayName": "Public IP"
      },
      "sku": {
        "name": "Standard"
      },
      "properties": {
        "publicIPAllocationMethod": "Static",
        "dnsSettings": {
          "domainNameLabel": "[variables('publicIpAddressDNSNamevm3')]"
        }
      }
    }
  ],
  "outputs": {
    "Win11 DNS Name": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses', variables('publicIpAddressNamevm3'))).dnsSettings.fqdn]"
    },
    "Win11 Admin Username": {
      "type": "string",
      "value": "RecastUser"
    },
    "Win11 Admin Password": {
      "type": "string",
      "value": "RecastSoftware25!!"
    },
    "RMS DNS Name": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses', variables('publicIpAddressNamevm2'))).dnsSettings.fqdn]"
    },
    "RMS Admin Username": {
      "type": "string",
      "value": "RecastAdmin"
    },
    "RMS Admin Password": {
      "type": "string",
      "value": "RecastSoftware94!!"
    },
    "DC DNS Name": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses', variables('publicIpAddressNamevm1'))).dnsSettings.fqdn]"
    },
    "DC Admin Username": {
      "type": "string",
      "value": "RecastAdmin"
    },
    "DC Admin Password": {
      "type": "string",
      "value": "RecastSoftware94!!"
    }
  }
}




