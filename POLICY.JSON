{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "principalId": {
      "type": "string",
      "metadata": {
        "description": "The principal ID of the user or service principal to assign the policy."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Authorization/policyDefinitions",
      "apiVersion": "2021-06-01",
      "name": "AllowOnlyVnetDnsUpdatesPolicy",
      "properties": {
        "displayName": "Allow only DNS updates on VNets",
        "mode": "All",
        "description": "Deny all VNet updates except DNS settings.",
        "policyRule": {
          "if": {
            "allOf": [
              {
                "field": "type",
                "equals": "Microsoft.Network/virtualNetworks"
              },
              {
                "not": {
                  "field": "Microsoft.Network/virtualNetworks/dhcpOptions.dnsServers",
                  "exists": true
                }
              }
            ]
          },
          "then": {
            "effect": "deny"
          }
        }
      }
    },
    {
      "type": "Microsoft.Authorization/policyAssignments",
      "apiVersion": "2021-06-01",
      "name": "OnlyVnetDnsUpdateAssignment",
      "properties": {
        "displayName": "Only DNS updates allowed on VNets",
        "policyDefinitionId": "[resourceId('Microsoft.Authorization/policyDefinitions', 'AllowOnlyVnetDnsUpdatesPolicy')]",
        "scope": "[subscription().id]"
      },
      "dependsOn": [
        "AllowOnlyVnetDnsUpdatesPolicy"
      ]
    }
  ]
}
